<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAD5D5"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".registeredUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rozanee's Details"
            android:textSize="20sp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/buttonColor"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#253A4B"
            android:elevation="5dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="নাম"
                    android:textColor="#9B9797"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/icongreen"
                    android:drawablePadding="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rozanee Kanta Das"
                    android:textColor="#FFFF"
                    android:textSize="18sp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="অবস্থান"
                    android:textColor="#9B9797"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/icongreen"
                    android:drawablePadding="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dhaka, Bnagladesh"
                    android:textColor="#FFFF"
                    android:textSize="18sp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="বয়স"
                    android:textColor="#9B9797"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/icongreen"
                    android:drawablePadding="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21"
                    android:textColor="#FFFF"
                    android:textSize="18sp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="লিঙ্গ"
                    android:textColor="#9B9797"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/icongreen"
                    android:drawablePadding="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textColor="#FFFF"
                    android:textSize="18sp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="পরীক্ষার ফলাফল ইতিবাচক তারিখ"
                    android:textColor="#9B9797"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/icongreen"
                    android:drawablePadding="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12-05-2020"
                    android:textColor="#FFFF"
                    android:textSize="18sp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="আইসোলেশনের সময়কাল"
                    android:textColor="#9B9797"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/icongreen"
                    android:drawablePadding="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14 days"
                    android:textColor="#FFFF"
                    android:textSize="18sp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="প্রবাস হতে আগত?"
                    android:textColor="#9B9797"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/icongreen"
                    android:drawablePadding="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textColor="#FFFF"
                    android:textSize="18sp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="সহায়তা প্রয়োজন?"
                    android:textColor="#9B9797"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/icongreen"
                    android:drawablePadding="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textColor="#FFFF"
                    android:textSize="18sp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attachment"
                    android:textColor="#9B9797"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/icongreen"
                    android:drawablePadding="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pdf/Picture"
                    android:textColor="#FFFF"
                    android:textSize="18sp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@color/buttonColor"
            android:text="সুস্থ হয়ে উঠছেন"
            android:textAllCaps="false"
            android:layout_margin="20dp"
            android:textColor="#FFFF"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>