<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#253A4B"
    android:scrollbars="none"
    tools:context=".profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedinfo"
            android:elevation="7px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                >

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/image"

                    android:layout_gravity="center"
                    android:layout_marginBottom="50dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="নাম"
                        android:textColor="#2B2929"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/ic_person_black_24dp"
                        android:drawablePadding="5dp"
                        />

                    <ImageView
                        android:id="@+id/nameEditButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_edit_black_24dp"
                        />

                </RelativeLayout>



                <EditText
                    android:id="@+id/userName"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="আপনার নাম"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginBottom="30dp"
                    android:enabled="false"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ঠিকানা"
                        android:textColor="#2B2929"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/ic_email_black_24dp"
                        android:drawablePadding="5dp"
                        />

                    <ImageView
                        android:id="@+id/addressEditBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_edit_black_24dp"
                        />

                </RelativeLayout>


                <EditText
                    android:id="@+id/addreesEdit"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="29dp"
                    android:layout_marginBottom="30dp"
                    android:enabled="false"
                    android:text="আপনার ঠিকানা"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_email_black_24dp"
                        android:drawablePadding="5dp"
                        android:text="ইমেইল"
                        android:textColor="#2B2929"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/emailEditBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_edit_black_24dp"
                        />

                </RelativeLayout>

                <EditText
                    android:id="@+id/emailEdit"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="আপনার ইমেল"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginBottom="30dp"
                    android:enabled="false"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:drawablePadding="5dp"
                    android:text="মোবাইল নম্বর"
                    android:textColor="#2B2929"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+8801992234355"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="50dp"
                    />


                <LinearLayout
                    android:id="@+id/relativeLayoutid"

                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >

                    <Button
                        android:visibility="gone"
                        android:id="@+id/cancelBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="বাতিল"
                        android:layout_margin="10dp"
                        android:textSize="18dp"
                        android:textColor="#FFFF"
                        android:layout_weight="1"
                        android:background="@color/buttonColor"
                        />

                    <Button
                        android:visibility="gone"
                        android:id="@+id/editBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="সংরক্ষণ"
                        android:textSize="18dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:textColor="#FFFF"
                        android:background="@color/buttonColor"

                        />

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>



</ScrollView>